{
         "version": 2,
         "builds": [
             { "src": "*.html", "use": "@vercel/static" },
             { "src": "api/**/*.js", "use": "@vercel/node" }
         ],
         "routes": [
             { "src": "/api/(.*)", "dest": "/api/$1" },
             { "src": "/(.*)", "dest": "/index.html" }
         ]
     }